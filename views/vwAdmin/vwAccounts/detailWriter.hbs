{{#section "admin-breadcrumb"}}
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
      <li class="breadcrumb-item"><a href="/admin/accounts">Accounts</a></li>
      <li class="breadcrumb-item active" aria-current="page">Detail</li>
    </ol>
  </nav>
{{/section}}
{{#section "admin-js"}}
  <script>
    $('#btnAlias').on('click', function () {
      const writerID = $('#writerID').val();
      const alias = $('#alias').val();
      $.post('update-writer', { writerID, alias }, () => location.reload())
    })
  </script>
{{/section}}
<div class='d-flex justify-content-center' style='max-width: 50rem; margin: auto'>
  <div class='card' style='width: 100%;'>
    <h4 class='card-header'>
      Writer
    </h4>
    <div class='card-body'>
      <div class="row">
        <div class="col-5 text-center">
          <object data="/public/svg/writer.svg" width="200" height="200"> </object>
          <div class="mt-2">
            <h3>{{this.item.DisplayName}}</h3>
          </div>
          <input type='text' hidden id='writerID' value='{{this.item.ID}}' />
        </div>
        <div class="col-7">
          <div class="form-row">
            <div class="col-md-6 mb-1">
              <label for='alias'>Alias</label>
              <input type='text' class='form-control' id='alias' value='{{this.item.Alias}}' />
            </div>
            <div class="col-md-6 mb-1 d-flex align-items-center">
              <button id="btnAlias" class="btn btn-success mt-3">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
              </button>
            </div>
          </div>
          <div class="form-row">
            <div class="col-md-6 mb-1">
              <label for="firstName">First name</label>
              <input type="text" readonly class="form-control" id="firstName" value='{{this.item.FirstName}}'>
            </div>
            <div class="col-md-6 mb-1">
              <label for="lastName">Last name</label>
              <input type="text" readonly class="form-control" id="lastName" value="{{this.item.LastName}}">
            </div>
          </div>
          <div class='form-group'>
            <label for='dob'>Date of birth</label>
            <input type='text' readonly class='form-control' id='dob' value='{{this.item.DOB}}' />
          </div>
          <div class='form-group'>
            <label for='email'>Email</label>
            <input type='text' readonly class='form-control' id='email' value='{{this.item.Email}}' />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>