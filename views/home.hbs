<div class="d-flex container p-4">
    <nav class="container nav-expand-lg nav-light">
      <ul class="nav nav-pills">
        {{#each listParentCategories}}
        <li class="nav-item">
          <a class="nav-link text-light" href="#">{{Name}}</a>
        </li>
        {{/each}}
      </ul>
    </nav>
