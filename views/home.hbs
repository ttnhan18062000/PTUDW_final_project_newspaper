{{#section 'js'}}
<script>
  $(document).scroll(function () {
    var $nav = $(".postTags");
    if ($(this).scrollTop() > $("#carouselTop3Post").height() - 160) {
      $nav.css({ 'position': 'relative', 'top': $(this).scrollTop() - ($("#carouselTop3Post").height() - 160) })
    }
    else {
      $nav.css({ 'position': 'static', 'top': '0px' });
    }
  });

  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  });
</script>
{{/section}}

