{{#section 'css'}}
    <link rel="stylesheet" type="text/css" href="/public/styles/register-login.css">;
{{/section}}

{{#section 'js'}}
    <script>
        $('#frmReset').on('submit', async function(e){
            e.preventDefault();

            const password = $('#txtPassword').val();
            const repassword = $('#txtRePassword').val();
            let error = null;

            $('#dvMessage').empty();

            if (!password || !repassword)
                error = "Please fill in all fields";
            else if (password !== repassword)
                error = "Password do not match";
            else if (password && password.length < 6)
                error = "Password must contains atleast 6 characters";

            if(error)
                $('#dvMessage').append(`<div class="alert alert-danger w-100 bg-transparent color-lightred" role="alert">${error}</div>`);
            else
                $(this).unbind('submit').submit();
        });
    </script>
{{/section}}

<div class="card background-body">
<article class="card-body mx-auto bg-main text-white" style="width: 550px;">
        <h4 class="card-title mt-3 text-center mb-5">Change Password</h4>

        <div id="dvMessage">
            {{#if message}}
                <div class="alert alert-success w-100 bg-transparent color-lightgreen" role='alert'>{{message}}</div>
            {{/if}}
        </div>

        <form autocomplete='off' id="frmReset" method="POST">
            <div class="md-form">
                <div class="input-group">
                    <i class="fa fa-lock prefix grey-text"></i>
                    <input type="password" id="txtPassword" name="txtPassword" class="form-control text-white">
                    <label for="txtEmail">New Password</label>
                </div>
            </div> 

            <div class="md-form">
                <div class="input-group">
                    <i class="fa fa-lock prefix grey-text"></i>
                    <input type="password" id="txtRePassword" class="form-control text-white w-50">
                    <label for="txtToken">Confirm Password</label>
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
            <button type="submit" class="btn btn-info"> Confirm
                <i class="fa fa-arrow-circle-right"></i>
            </button>
        </div> <!-- form-group// -->  
        </form>

        <p class="text-center"><a href="/account/login/" class="color-cyan">Return to Login</a> </p>                                                                 
</article>
</div> <!-- card.// -->