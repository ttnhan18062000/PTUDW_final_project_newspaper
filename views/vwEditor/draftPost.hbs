{{#section "editor-css"}}
  <link
    href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;1,100;1,300;1,400;1,700&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
    integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
  <link rel="stylesheet" href="/public/css/pages/editor-draft-post.css">
{{/section}}
{{#section "editor-breadcrumb"}}
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active">Biên tập viên</li>
      <li class="breadcrumb-item"><a href="/editor">Chuyên mục quản lý</a></li>
      <li class="breadcrumb-item active" aria-current="page">{{activeCat.Name}}</li>
    </ol>
  </nav>
{{/section}}
{{#section "editor-js"}}
{{/section}}
<div class='main-container'>
  <div class="header-container">
    <div class="title">
      Chuyên mục <b>{{activeCat.Name}}</b>
    </div>
    <div class="subtitle">
      Duyệt, từ chối các bài viết phóng viên đăng vào chuyên mục.
    </div>
  </div>
  <div class="post-list-container">
    <div class="post-list-header">
      Bài viết
    </div>
    {{#each listPost}}
      <div class="post-item-container">
        <a class="post-content" href="/editor/posts/{{PostID}}">
          <div class="post-content-title">{{Title}}</div>
          <div class="post-info">
            <i class="fa fa-pencil" aria-hidden="true"></i>
            <span class="post-content-label">Viết bởi: &nbsp;</span>
            {{Writer}}
          </div>
          <div class="post-info"> 
            <i class="fa fa-tag" aria-hidden="true"></i>
            <span class="post-content-label">Nhãn:</span>
            {{#each this.tags}}
               <span class="badge">{{TagName}}</span>
            {{/each}}
          </div>
          <div class="post-info">
            <i class="fa fa-clock-o" aria-hidden="true"></i>
            <span class="post-content-label">Cập nhật lần cuối: </span>
            22/08/2020{{UpdatedAt}}
          </div>
        </a>
        <div class="post-options">
          <a href="/editor/posts/publish?id={{PostID}}" class="post-option">
            <i class="fa fa-upload" aria-hidden="true"></i>
            &nbsp;Duyệt
          </a>
          <a href="/editor/posts/refuse?id={{PostID}}" class="post-option">
            <i class="fa fa-minus-circle" aria-hidden="true"></i>
            &nbsp;Từ chối
          </a>
        </div>
      </div>
    {{/each}}
  </div>
  {{#if isEmpty}}
    <div id="NoPost">
      <img src="/public/svg/emptypost.svg" width="150" alt="">
      <div style="font-size: 2rem;">Không tìm thấy bài viết nào.</div>
    </div>
  {{/if}}
</div>